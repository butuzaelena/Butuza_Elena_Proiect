@page "/{id:int?}"
@model Butuza_Elena_Proiect.Pages.Bikes.IndexModel

@{
    ViewData["Title"] = "Bikes";
}

<h1>Bikes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].Series)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].AparitionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].Store.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike[0].BikeCategories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BikeD.Bikes)
        {

            string selectedRow = "";
            if (item.ID == Model.BikeID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Series)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AparitionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.StoreName)
            </td>
            <td>
                @{
                    foreach (var category in item.BikeCategories)
                    {
                        @category.Category.ID @: @category.Category.CategoryName <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>